<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Calculator.Light" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/btn_bg_secondary</item>
        <item name="colorOnPrimary">@color/btn_text</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="backgroundApp">@color/bg</item>
        <item name="colorFirst">@color/btn_bg</item>
        <item name="colorSecond">@color/btn_bg_secondary</item>
        <item name="colorText">@color/btn_text</item>
        <item name="colorTextSecond">@color/btn_text</item>
        <item name="colorScreen">@color/white</item>
    </style>

    <style name="Theme.Calculator.Dark" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="backgroundApp">@color/black</item>
        <item name="colorFirst">@color/black</item>
        <item name="colorSecond">@color/black</item>
        <item name="colorText">@color/white</item>
        <item name="colorTextSecond">@color/orange</item>
        <item name="colorScreen">@color/black</item>
    </style>

    <style name="Theme.Calculator" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
    </style>

</resources>